<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.DetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/spriteDetails"
            android:layout_width="179dp"
            android:layout_height="159dp"
            android:layout_marginStart="116dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="116dp"
            android:layout_marginBottom="454dp"
            android:src="@drawable/pokepedia"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/experienceDetails"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="89dp"
            android:layout_marginEnd="283dp"
            android:layout_marginBottom="364dp"
            android:gravity="center"
            android:hint="Experience"
            android:text="exp"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spriteDetails"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/attackDetails"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="283dp"
            android:layout_marginBottom="316dp"
            android:gravity="center"
            android:hint="Attack"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/experienceDetails" />

        <TextView
            android:id="@+id/healthDetails"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="283dp"
            android:layout_marginBottom="253dp"
            android:gravity="center"
            android:hint="Health"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/attackDetails"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/nameDetails"
            android:layout_width="71dp"
            android:layout_height="20dp"
            android:layout_marginStart="175dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="178dp"
            android:layout_marginBottom="423dp"
            android:gravity="center"
            android:hint="Name"
            android:text="name"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spriteDetails"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="165dp"
            android:layout_marginTop="273dp"
            android:layout_marginEnd="152dp"
            android:layout_marginBottom="93dp"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameDetails"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="91dp"
            android:layout_marginTop="189dp"
            android:layout_marginEnd="109dp"
            android:layout_marginBottom="115dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/backBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/healthDetails"
            app:layout_constraintTop_toBottomOf="@+id/spriteDetails" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>